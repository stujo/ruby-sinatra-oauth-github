ruby '2.1.0'
source 'https://rubygems.org'

# PostgreSQL driver

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# For Database
gem 'pg'
gem 'sinatra-activerecord'
gem 'activesupport', '~>4.1'
gem 'activerecord', '~>4.1'

# Use Thin for our web server
gem 'thin'

# Rake things up!
gem 'rake'
gem 'httparty'
gem 'dotenv'

group :development, :test do
  gem 'webmock'
  gem 'faker'
  gem 'rspec'
  gem 'rack-test'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'shoulda-matchers'
  gem 'rerun'
end
